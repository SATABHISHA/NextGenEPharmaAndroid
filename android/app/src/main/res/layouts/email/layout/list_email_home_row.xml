<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_email"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/emailread"/>
            <TextView
                android:id="@+id/tv_email_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_email"
                android:layout_toLeftOf="@+id/img_attachment"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="#616161"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Week Date"/>
            <TextView
                android:id="@+id/tv_email_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email_subject"
                android:layout_toRightOf="@id/img_email"
                android:layout_toLeftOf="@+id/img_attachment"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:textColor="#808080"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="From: abc@gmail.com"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email_from"
                android:layout_toRightOf="@id/img_email"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:textColor="#ACACAC"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="10-06-2018"/>
            <ImageView
                android:id="@+id/img_attachment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/attachments"
                android:visibility="visible"
                android:layout_marginRight="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <!-- </RelativeLayout> -->
        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>