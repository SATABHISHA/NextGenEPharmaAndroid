<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/cordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4DC7A1"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Emails"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                />
        </RelativeLayout>


        <!--android:background="?attr/colorPrimary" -->

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_above="@id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/gray_border">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/img_view"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/emailread"/>
                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_view"
                    android:layout_marginLeft="10dp"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:text="Regarding Coronavirus"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_view"
                    android:layout_below="@id/tv_subject"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="11-09-2020"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c2c2c2"/>
            <RelativeLayout
                android:id="@+id/rl_attachment1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/img_view_attachment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/attachments"/>
                <TextView
                    android:id="@+id/tv_attachment_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toLeftOf="@id/imgbtn_dwnld"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="Coronavirus doc"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/img_view_attachment"/>

                <ImageButton
                    android:id="@+id/imgbtn_dwnld"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/download" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_line1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c2c2c2"
                android:orientation="vertical"/>
            <RelativeLayout
                android:id="@+id/rl_attachment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/img_view_attachment2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/attachments"/>
                <TextView
                    android:id="@+id/tv_attachment_file2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toLeftOf="@id/imgbtn_dwnld2"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="Coronavirus doc"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/img_view_attachment2"/>

                <ImageButton
                    android:id="@+id/imgbtn_dwnld2"
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/download" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c2c2c2"
                android:orientation="vertical"/>
            <RelativeLayout
                android:id="@+id/rl_attachment3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/img_view_attachment3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/attachments"/>
                <TextView
                    android:id="@+id/tv_attachment_file3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toLeftOf="@id/imgbtn_dwnld3"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="Coronavirus doc"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/img_view_attachment3"/>
                <ImageButton
                    android:id="@+id/imgbtn_dwnld3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/download"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_line3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c2c2c2"
                android:orientation="vertical"/>
            <RelativeLayout
                android:id="@+id/rl_attachment4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/img_view_attachment4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/attachments"/>
                <TextView
                    android:id="@+id/tv_attachment_file4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toLeftOf="@id/imgbtn_dwnld4"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:text="Coronavirus doc"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/img_view_attachment4"/>
                <ImageButton
                    android:id="@+id/imgbtn_dwnld4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/download"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c2c2c2"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:textSize="17sp"
                android:textColor="#000000"
                android:text="djfvhdfvjvb"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:background="#4DC7A1"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Back"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>