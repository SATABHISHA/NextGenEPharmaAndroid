        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="#848585"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="Select Work Place"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_worked_place"
            android:layout_below="@id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#E0E0E0"
            android:layout_above="@id/btn_load_doctor"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="0dp"
            android:scrollbars="vertical" />
        <Button
            android:id="@+id/btn_load_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-2dp"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="#8DB3E2"
            android:textAllCaps="false"
            android:text="Load Doctor"/>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_below="@id/btn_load_doctor"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="#848585"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="Select Doctor"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </LinearLayout>

        <!--  <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp"
