<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DC7A1"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#4DC7A1"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
            <!-- android:background="?attr/colorPrimary"-->

        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBE7E7"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <RelativeLayout
                        android:id="@+id/rlDcr"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewDcr"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/dcr"/>
                        <TextView
                            android:id="@+id/tvDcr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDcr"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="DCR"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvDcrCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDcr"
                            android:layout_below="@id/tvDcr"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="Daily Call Report"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_dcr"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlMwr"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewMwr"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/mwr"/>
                        <TextView
                            android:id="@+id/tvMwr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewMwr"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="MWR"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvMwrCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewMwr"
                            android:layout_below="@id/tvMwr"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="Managers' Weekly Report"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_mwr"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlDcrSub"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewDcrSub"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/dcrsub"/>
                        <TextView
                            android:id="@+id/tvDcrSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDcrSub"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="DCR Subordinate"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvDcrSubCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDcrSub"
                            android:layout_below="@id/tvDcrSub"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="DCR of Subordinates"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_dcr_subordinate"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlMwrSub"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewMwrSub"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/mwrsub"/>
                        <TextView
                            android:id="@+id/tvMwrSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewMwrSub"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="MWR Subordinate"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvMwrSubCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewMwrSub"
                            android:layout_below="@id/tvMwrSub"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="MWR of Subordinates"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_mwr_subordinate"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlDcrAll"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewDcrAll"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/dcrall"/>
                        <TextView
                            android:id="@+id/tvDcrAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDcrAll"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="DCR Report"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvDcrAllCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDcrAll"
                            android:layout_below="@id/tvDcrAll"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="MSR's DCR Report"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_dcr_report"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlMwrAll"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewMwrAll"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/mwrall"/>
                        <TextView
                            android:id="@+id/tvMwrAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewMwrAll"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="MWR Report"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvMwrAllCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewMwrAll"
                            android:layout_below="@id/tvMwrAll"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="Managers' MWR Report"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_mwr_report"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlDocuments"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewDocuments"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/documents"/>
                        <TextView
                            android:id="@+id/tvDocuments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDocuments"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="Documents"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvDocumentsCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDocuments"
                            android:layout_below="@id/tvDocuments"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="View / Share / Upload Documents"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_doccuments"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlCircular"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewCircular"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/circular"/>
                        <TextView
                            android:id="@+id/tvCircular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewCircular"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="Circulars"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvCircularCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewCircular"
                            android:layout_below="@id/tvCircular"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="View Company Circulars"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_circulars"
                            android:layout_width="45dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:background="@drawable/menu_arrow"/>
                        <RelativeLayout
                            android:id="@+id/rl_circulars1"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:background="@drawable/menu_arrow1">
                            <TextView
                                android:id="@+id/tv_circular_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_centerInParent="true"
                                android:text="26"
                                android:textSize="22dp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlEmails"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewEmails"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/email"/>
                        <TextView
                            android:id="@+id/tvEmails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewEmails"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="E-Mail"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvEmailsCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewEmails"
                            android:layout_below="@id/tvEmails"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="View E-Mails"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_email"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlTracking"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="gone"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewTracking"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/msrtrack"/>
                        <TextView
                            android:id="@+id/tvTracking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewTracking"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="Track MSR"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvTrackingCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewTracking"
                            android:layout_below="@id/tvTracking"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="Tracking Report in Map"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_trackmsr"
                            android:layout_width="50dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="30dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_home"
        app:menu="@menu/activity_home_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>