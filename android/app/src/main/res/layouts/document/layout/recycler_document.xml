<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"> for future backup color code -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/document_border"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_fileimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/filemsword"/>
        <TextView
            android:id="@+id/tv_doc_name"
            android:layout_toRightOf="@id/img_fileimage"
            android:layout_toLeftOf="@id/imgbtn_dwnload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:text="Doc1 Name"
            android:textStyle="bold"
            android:textColor="#3F6CAF"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tv_upload_date_size"
            android:layout_below="@id/tv_doc_name"
            android:layout_toRightOf="@id/img_fileimage"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A9A8A8"
            android:text="11-Sep-2019   1.5MB "
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_below="@id/tv_upload_date_size"
            android:layout_toRightOf="@id/img_fileimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="11-Sep-2019   1.5MB jhgfjhlksgh kds.fgsk fgdhdfhdhdhbdhdhhdhdfd"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/tv_download"
            android:layout_below="@id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Downloading"
            android:visibility="gone"
            android:textSize="12dp"/>
