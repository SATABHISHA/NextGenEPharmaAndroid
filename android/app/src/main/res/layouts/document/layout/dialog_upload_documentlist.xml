<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout_chng_pwd"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#399773">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Upload"
                android:layout_marginLeft="9dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3"
            android:padding="0dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:text="Type File Description"/>
            <EditText
                android:layout_margin="12dp"
                android:id="@+id/ed_desc"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="top"
                android:textSize="13dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@drawable/light_gray_border"/>

            <!--<TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="normal"
                android:text="Enter Password Hint"/>

                <EditText
                    android:id="@+id/ed_password_hint"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:layout_height="35dp"
                    android:singleLine="true"
                    android:layout_marginBottom="20dp"
                    android:textSize="18dp" /> -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_cancel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#4DC7A1"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="17dp"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:layout_centerInParent="true"
                    android:text="Cancel"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            <RelativeLayout
                android:id="@+id/rl_skip_proceed"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#4DC7A1"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_skip_proceed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:text="Skip"/>
            </RelativeLayout>
          <!--  <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            <RelativeLayout
                android:id="@+id/rl_proceed"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#4DC7A1"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_proceed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:text="Proceed"/>
            </RelativeLayout>-->
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>