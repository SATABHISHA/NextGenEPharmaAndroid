<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"> for future backup color code -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_fileimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/filemsword"/>
        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_toRightOf="@id/img_fileimage"
            android:layout_toLeftOf="@id/imgbtn_dwnload"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doc1 Name"
                android:textStyle="bold"
                android:textColor="#3F6CAF"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_upload_date_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11-Sep-2019   1.5MB"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Description of the file"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/imgbtn_dwnload"
            android:layout_toLeftOf="@id/imgbtn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/download"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/imgbtn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/share"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>