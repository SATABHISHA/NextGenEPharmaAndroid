    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#A5A5A5">
                <TextView
                    android:id="@+id/tv_dcr_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:text="DCR No: 20"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:text="Date: 10-SEP-2019"/>
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:text="Status: Submitted"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#D3D2D2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DCR Summary"
                    android:textSize="20sp"
                    android:textColor="#444444"
                    android:textStyle="normal"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDcrTypeCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="DCR Type"/>
                    <TextView
                        android:id="@+id/tvDcrType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:textSize="18sp"
                        android:textColor="#549BD1"
                        android:text="Field"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvHqCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="HQ"/>

                    <TextView
                        android:id="@+id/tvHq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:text="Kolkata"
                        android:textColor="#444444"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvWorkPlaceCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Work Place"/>
                    <TextView
                        android:id="@+id/tvWorkPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:textSize="18sp"
                        android:textColor="#444444"
                        android:text="Kolkata"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvWorkedWithCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Worked With"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tvWorkedWith"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:textSize="18sp"
                        android:textColor="#444444"
                        android:text="(ZBM)Anil Kumar"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvWarningMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textColor="#CF6868"
                    android:visibility="gone"
                    android:text="Cannot save DCR without at least one Doctor or Chemist or Stockist when DCR Type is Field Work."
                    android:textSize="16sp" />
            </LinearLayout>
           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c2c2c2"/> -->
            <ExpandableListView
                android:id="@+id/lvExpPendingItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="67dp"
                android:groupIndicator="@null"
                android:background="@drawable/gray_border"
                android:layout_marginTop="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#4DC7A1"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="normal" />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#4DC7A1"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textStyle="normal"
                android:text="Cancel"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

           <!-- <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4DC7A1"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:text="Edit"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/> -->
            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#4DC7A1"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textStyle="normal"
                android:text="Save As \n Draft"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>