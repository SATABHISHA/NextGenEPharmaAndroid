<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/cordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DC7A1"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#4DC7A1"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="DCR"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    />
                <RelativeLayout
                    android:id="@+id/rl_back_arrow"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                <ImageButton
                    android:id="@+id/imgbtn_arrrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/arrowback"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <!--android:background="?attr/colorPrimary" -->

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
          <LinearLayout
              android:id="@+id/ll1"
              android:layout_alignParentTop="true"
              android:layout_marginBottom="0dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFDFD"
              android:orientation="vertical">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="45dp"
                  android:background="#A5A5A5">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Enter Basic Details"
                      android:textSize="20sp"
                      android:textColor="#ffffff"
                      android:textStyle="normal"
                      android:layout_centerInParent="true"/>
              </RelativeLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingTop="10dp"
                  android:paddingLeft="30dp">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <TextView
                      android:id="@+id/tvMsrNameCaption"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:text="MSR Name"/>
                  <TextView
                      android:id="@+id/tvMsrName"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="120dp"
                      android:textSize="18sp"
                      android:textColor="#444444"
                      android:text="Sudip Laha"/>
              </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <TextView
                          android:id="@+id/tvDCRNoCaption"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:text="DCR No"/>
                      <TextView
                          android:id="@+id/tvDCRNo"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="120dp"
                          android:textSize="18sp"
                          android:textColor="#444444"
                          android:text="20"/>
                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                      <TextView
                          android:id="@+id/tvDCRDateCaption"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="DCR date"
                          android:textSize="18sp" />

                      <TextView
                          android:id="@+id/tvDCRDate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="120dp"
                          android:text="10-SEP-2019"
                          android:textColor="#444444"
                          android:textSize="18sp" />
                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
                      <TextView
                          android:id="@+id/tvHQCaption"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="18sp"
                          android:text="HQ"/>
                      <TextView
                          android:id="@+id/tvHQ"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="120dp"
                          android:textSize="18sp"
                          android:textColor="#444444"
                          android:text="Kolkata"/>
                  </RelativeLayout>
              </LinearLayout>

            <!--  <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="30dp"
                  android:text="Type"
                  android:textSize="18sp"/> -->
              <LinearLayout
                  android:id="@+id/ll_dcr"
                  android:layout_below="@id/ll1"
                  android:layout_width="match_parent"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_height="40dp"
                  android:layout_marginTop="15dp"
                  android:background="#848585"
                  android:orientation="vertical">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="23dp"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:text="DCR Type"
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
              </LinearLayout>
              <!--<Spinner
                  android:id="@+id/spinner"
                  android:layout_width="180dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="30dp"
                  /> -->
              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="15dp"
                  android:layout_marginLeft="15dp"
                  android:background="#E0E0E0">

              <fr.ganfra.materialspinner.MaterialSpinner
                  android:id="@+id/spinner_type"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="15dp"
                  android:layout_marginLeft="15dp"
                  android:background="#ffffff"
                  android:paddingLeft="2dp"
                  app:ms_multiline="false"
                  app:ms_hint="Select Type"
                  app:ms_enableFloatingLabel="false"
                  app:ms_enableErrorLabel="false"
                  app:ms_thickness="0dp"
                  app:ms_arrowColor="#848585"
                  app:ms_arrowSize="16dp"
                  app:ms_alignLabels="false"
                  android:layout_gravity="center"
                  android:overlapAnchor="false"/>
              </RelativeLayout>
              <LinearLayout
                  android:id="@+id/ll_base_work_place"
                  android:layout_below="@id/ll1"
                  android:layout_width="match_parent"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_height="40dp"
                  android:layout_marginTop="15dp"
                  android:background="#848585"
                  android:orientation="vertical">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="23dp"
                      android:gravity="center"
                      android:layout_gravity="center_vertical"
                      android:text="Base Work Place"
                      android:textColor="#ffffff"
                      android:textSize="18sp"/>
              </LinearLayout>
             <!-- <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="30dp"
                  android:text="Base Work Place"
                  android:textSize="18sp"/> -->
              <!--<Spinner
                  android:id="@+id/spinner"
                  android:layout_width="180dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="30dp"
                  /> -->
              <RelativeLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="15dp"
                  android:layout_marginLeft="15dp"
                  android:background="#E0E0E0">

              <fr.ganfra.materialspinner.MaterialSpinner
                  android:id="@+id/spinner"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="15dp"
                  android:layout_marginLeft="15dp"
                  android:background="#ffffff"
                  android:paddingLeft="2dp"
                  app:ms_multiline="false"
                  app:ms_hint="Select Work Place"
                  app:ms_enableFloatingLabel="false"
                  app:ms_enableErrorLabel="false"
                  app:ms_thickness="0dp"
                  app:ms_arrowColor="#848585"
                  app:ms_arrowSize="16dp"
                  app:ms_alignLabels="false"
                  android:layout_gravity="center"
                  android:overlapAnchor="false"/>
              </RelativeLayout>
             <!-- <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="30dp"
                  android:text="Worked With"
                  android:textSize="18sp"/>
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/recycler_view"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="0dp"
                  android:padding="0dp"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="30dp"
                  android:layout_marginTop="5dp"
                  android:scrollbars="vertical" /> -->
          </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_below="@id/ll1"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="#848585"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="Worked With"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_below="@id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#E0E0E0"
            android:layout_above="@id/ll_buttons"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            android:scrollbars="vertical" />
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4DC7A1"
                android:layout_weight=".5"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:text="Cancel"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4DC7A1"
                android:layout_weight=".54"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:text="Next"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
