<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#399773">
                <TextView
                    android:id="@+id/tv_accountcode"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="Want to Save?"/>
                <!--<ImageButton
                    android:id="@+id/imgbtn_close"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/close"/> -->
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Remarks"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_remarks"
                    android:layout_marginTop="24dp"
                    android:textColor="#CF6868"
                    android:text="( Required )"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp">
                <EditText
                    android:layout_margin="1dp"
                    android:id="@+id/ed_note"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:background="#00000000"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_sup_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#4DC7A1"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="17dp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textColor="#ffffff"/>
            <LinearLayout
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:background="#ffffff"></LinearLayout>
            <Button
                android:id="@+id/btn_sup_save"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:background="#4DC7A1"
                android:layout_weight="1"
                android:text="Done"
                android:textStyle="normal"
                android:textSize="17dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>