<?xml version="1.0" encoding="utf-8"?>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DC7A1"
            android:theme="@style/AppTheme.AppBarOverlay">

            <!--<androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#4DC7A1"
                app:popupTheme="@style/AppTheme.PopupOverlay" /> -->

            <!-- android:background="?attr/colorPrimary"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Customers"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    />
            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBE7E7"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <!--newly added, 15th march -->
                    <RelativeLayout
                        android:id="@+id/rlDoctor"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:visibility="visible"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewDoctor"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/customersdoctor"/>
                        <TextView
                            android:id="@+id/tvDoctor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDoctor"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="Doctors"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvCustomerCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewDoctor"
                            android:layout_below="@id/tvDoctor"
                            android:layout_toLeftOf="@id/rl_customer"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="View / Geo Tag Doctors"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_customer"
                            android:layout_width="45dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <!--newly added, 15th march -->
                    <RelativeLayout
                        android:id="@+id/rlChemist"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewChemist"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/customerschemist"/>
                        <TextView
                            android:id="@+id/tvChemist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewChemist"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="Chemists"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvChemistCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/rl_chemist"
                            android:layout_marginRight="15dp"
                            android:layout_toRightOf="@id/imgViewChemist"
                            android:layout_below="@id/tvChemist"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="View / Geo Tag Chemists"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_chemist"
                            android:layout_width="45dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlStockists"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="90dp"
                        android:visibility="visible"
                        android:background="@drawable/homeborder">
                        <ImageView
                            android:id="@+id/imgViewStockists"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/customersstockist"/>
                        <TextView
                            android:id="@+id/tvStockists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewStockists"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#4E4E4E"
                            android:text="Stockists"
                            android:textSize="25dp"/>
                        <TextView
                            android:id="@+id/tvStockistCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/imgViewStockists"
                            android:layout_below="@id/tvStockists"
                            android:layout_toLeftOf="@id/rl_stockists"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="0dp"
                            android:textColor="#9E9E9E"
                            android:text="Managers' Weekly Report"
                            android:textSize="16dp"/>
                        <RelativeLayout
                            android:id="@+id/rl_stockists"
                            android:layout_width="45dp"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="22dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/menu_arrow"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
