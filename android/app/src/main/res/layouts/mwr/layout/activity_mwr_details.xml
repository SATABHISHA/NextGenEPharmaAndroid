<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/cordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DC7A1"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#F7519B"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="MWR"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    />
                <RelativeLayout
                    android:id="@+id/rl_back_arrow"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <ImageButton
                        android:id="@+id/imgbtn_arrrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/arrowback"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <!--android:background="?attr/colorPrimary" -->

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFDFD"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#A5A5A5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Basic Details"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:textStyle="normal"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:paddingTop="10dp"
                android:paddingLeft="30dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNameCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:textSize="18sp"
                        android:textColor="#444444"
                        android:text="Sudip Laha"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvMWRNoCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="MWR No"/>

                    <TextView
                        android:id="@+id/tvMWRNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:text="325"
                        android:textColor="#444444"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvMWRDateCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MWR date"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvMWRDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:text="10-SEP-2019"
                        android:textColor="#444444"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvHQCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="HQ"/>

                    <TextView
                        android:id="@+id/tvHQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:text="Kolkata"
                        android:textColor="#444444"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <!--  <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="30dp"
                  android:text="Type"
                  android:textSize="18sp"/> -->
            <LinearLayout
                android:id="@+id/ll_mwr"
                android:layout_below="@id/ll1"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="#848585"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="Activity"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
            </LinearLayout>
            <!--<Spinner
                android:id="@+id/spinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                /> -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="#E0E0E0">

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="#ffffff"
                    android:paddingLeft="2dp"
                    app:ms_multiline="false"
                    app:ms_hint="Select Type"
                    app:ms_enableFloatingLabel="false"
                    app:ms_enableErrorLabel="false"
                    app:ms_thickness="0dp"
                    app:ms_arrowColor="#848585"
                    app:ms_arrowSize="16dp"
                    app:ms_alignLabels="false"
                    android:layout_gravity="center"
                    android:overlapAnchor="false"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_base_work_place"
                android:layout_below="@id/ll1"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="#848585"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:text="Base Work Place"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
            </LinearLayout>
            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="5dp"
                 android:layout_marginLeft="30dp"
                 android:text="Base Work Place"
                 android:textSize="18sp"/> -->
            <!--<Spinner
                android:id="@+id/spinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                /> -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="#E0E0E0">

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/spinner_work_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="#ffffff"
                    android:paddingLeft="2dp"
                    app:ms_multiline="false"
                    app:ms_hint="Select Work Place"
                    app:ms_enableFloatingLabel="false"
                    app:ms_enableErrorLabel="false"
                    app:ms_thickness="0dp"
                    app:ms_arrowColor="#848585"
                    app:ms_arrowSize="16dp"
                    app:ms_alignLabels="false"
                    android:layout_gravity="center"
                    android:overlapAnchor="false"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F7519B"
                android:layout_weight=".5"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:text="Cancel"/>
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F7519B"
                android:layout_weight=".54"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:text="Next"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>