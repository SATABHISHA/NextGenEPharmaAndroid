<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_weekdate_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#616161"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Week Date"/>
            <TextView
                android:id="@+id/tv_weekdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_weekdate_caption"
                android:textSize="22sp"
                android:textColor="#363636"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="10-06-2018"/>
            <TextView
                android:id="@+id/tv_day_date_period"
                android:layout_below="@id/tv_weekdate"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="normal"
                android:textColor="#ACACAC"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="04-11-2019 To 09-11-2019"/>
            <!--<RelativeLayout
                android:id="@+id/rl_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_alignParentRight="true"> -->
            <RelativeLayout
                android:id="@+id/rl_mwr"
                android:layout_toLeftOf="@id/imgbtn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible">
            <TextView
                android:id="@+id/tv_mwr_no_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:textColor="#616161"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerHorizontal="true"
                android:focusableInTouchMode="false"
                android:text="MWR No"/>
            <TextView
                android:id="@+id/tv_mwr_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mwr_no_caption"
                android:textSize="22sp"
                android:textColor="#363636"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerHorizontal="true"
                android:focusableInTouchMode="false"
                android:text="325"/>
            </RelativeLayout>
                <ImageButton
                    android:id="@+id/imgbtn_next"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/menu_arrow"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="11dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentRight="true"/>
           <!-- </RelativeLayout> -->
        </RelativeLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>