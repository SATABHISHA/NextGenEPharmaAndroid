<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/cordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DC7A1"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#F7519B"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Track MSR"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    />
                <RelativeLayout
                    android:id="@+id/rl_back_arrow"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <ImageButton
                        android:id="@+id/imgbtn_arrrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/arrowback"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <!--android:background="?attr/colorPrimary" -->

    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBE7E7"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llStateSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/input_background"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="85"
                    android:gravity="center"
                    android:background="#F7519B">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:background="@drawable/menuhamsberg"
                        android:scaleType="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15">

                   <!-- <Spinner
                        android:id="@+id/spinner_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        android:spinnerMode="dropdown"
                        android:overlapAnchor="false"
                        /> -->
                   <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/spinner_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select State"
                        android:textSize="13dp"
                        android:paddingLeft="10dp"
                        app:met_floatingLabel="none" /> -->
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        app:ms_multiline="false"
                        app:ms_hint="Select State"
                        app:ms_enableFloatingLabel="false"
                        app:ms_enableErrorLabel="false"
                        app:ms_thickness="0dp"
                        app:ms_arrowColor="#c2c2c2"
                        app:ms_arrowSize="16dp"
                        app:ms_alignLabels="false"
                        android:layout_gravity="center"
                        android:overlapAnchor="false"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSpinner"
                android:layout_below="@id/llStateSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/input_background"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="85"
                    android:background="#F7519B">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/username"
                        android:scaleType="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15">

                    <!--<Spinner
                        android:id="@+id/spinner_msr_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:autofillHints="Select MSR"
                        /> -->
                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner_msr_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        app:ms_multiline="false"
                        app:ms_hint="Select MSR NAME"
                        app:ms_enableFloatingLabel="false"
                        app:ms_enableErrorLabel="false"
                        app:ms_thickness="0dp"
                        app:ms_arrowColor="#c2c2c2"
                        app:ms_arrowSize="16dp"
                        app:ms_alignLabels="false"
                        android:layout_gravity="center"
                        android:overlapAnchor="false"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDate"
                android:layout_below="@id/llSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/input_background"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="85"
                    android:background="#F7519B">

                    <ImageButton
                        android:id="@+id/imgBtnCalender"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="center"
                        android:src="@drawable/calendar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="15">

                    <EditText
                        android:id="@+id/edt_date_select"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_border_tracking_details"
                        android:paddingLeft="10dp"
                        android:hint="Select Date"
                        android:singleLine="true"
                        android:clickable="true"
                        android:focusable="false"
                        android:imeOptions="actionDone"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/llDate"
                android:orientation="vertical"
                android:background="#c2c2c2"
                android:layout_marginTop="20dp"/>
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:layout_below="@id/ll_line"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            tools:context=".MapsActivity" />
        </RelativeLayout>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>